# Database Configuration
MONGODB_URI=mongodb://localhost:27017/minecraft-server-creator

# JWT Secret Key
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Console Logging Configuration
# Set to 'true' to enable console logs in production, 'false' or omit to disable
ENABLE_CONSOLE_LOGS=false

# Set to 'true' to disable console colors (useful for CI/CD environments)
DISABLE_CONSOLE_COLORS=false

# Console file control mode: 'development', 'whitelist', 'blacklist', 'production-debug', 'silent'
CONSOLE_FILE_MODE=development

# Portainer Configuration
PORTAINER_URL=https://your-portainer-instance.com
PORTAINER_USERNAME=admin
PORTAINER_PASSWORD=your-portainer-password

# WebDAV Configuration (for file uploads)
WEBDAV_URL=https://your-webdav-server.com
WEBDAV_USERNAME=your-webdav-username
WEBDAV_PASSWORD=your-webdav-password

# Server Folder Structure
# This is the base path where all user server folders will be created
# Structure will be: {WEBDAV_SERVER_BASE_PATH}/{username}/{unique-server-id}/
# Example: /minecraft-servers/john/686386c7fbf85b9adc878478/
WEBDAV_SERVER_BASE_PATH=/minecraft-servers

# Minecraft Server Path
# This is the path where Minecraft server files will be stored
MINECRAFT_PATH=/path/to/your/minecraft-servers